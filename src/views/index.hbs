<div class = 'col-md-6 offset-md-3'>
    <div class="card">
        <div class="card-header">
            <h1>Deliveries</h1>
        </div>
        <div class="card-body">
            {{#if deliveries}}
                <ul class="list-group">
                    {{#each deliveries}}
                        <li class="list-group-item">
                            {{dropoff}}
                            {{id}}
                            {{pickup}}
                            {{state}}
                            {{zone_id}}
                        </li>
                    {{/each}}
                </ul>
                
            {{else}}
                <h1>No deliveries</h1>
            {{/if}}
        </div>

    </div>

</div>